@model DirectGharPe.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-12">
        <div class="my-register-form">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="avatar">
                    <img src="~/Content/img/avatar.png" alt="Avatar">
                </div>

                <h2 class="text-center">Register</h2>

                <div class="form-group">
                    <input type="text" class="form-control my-form-control" name="name" placeholder="Your Name" required="required">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control my-form-control" name="email" placeholder="Email" required="required">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control my-form-control" name="mobile" placeholder="Mobile" required="required">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control my-form-control" name="password" placeholder="Password" required="required">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control my-form-control" name="confirm_password" placeholder="Confirm Password" required="required">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
                </div>
                <div class="bottom-action clearfix text-center">
                    <a href="#" class="float-right"></a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
