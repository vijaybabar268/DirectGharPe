@using DirectGharPe.Models
@model VerifyOTPViewModel

@{
    ViewBag.Title = "OTP";
    //Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="my-login-form">
            @using (Html.BeginForm("VerifyOTP", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="avatar">
                    <img src="~/Content/img/avatar.png" alt="Avatar">
                </div>
                @Session["OTP"].ToString()
                <h2 class="text-center">OTP</h2>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.OTP, new { @class = "form-control my-form-control", placeholder = "Enter OPT" })
                    @Html.ValidationMessageFor(m => m.OTP, "", new { @class = "text-danger" })
                </div>                                

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Verify</button>
                </div>

                <div class="bottom-action clearfix text-center">
                    <a href="#" class="float-right"></a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

