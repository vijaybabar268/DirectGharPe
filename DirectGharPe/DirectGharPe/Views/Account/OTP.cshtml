
@{
    ViewBag.Title = "OTP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="my-login-form">
            @using (Html.BeginForm("OTP", "Account", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="avatar">
                    <img src="~/Content/img/avatar.png" alt="Avatar">
                </div>

                <h2 class="text-center">OTP</h2>

                <div class="form-group">
                    <input type="text" class="form-control my-form-control" name="otp" placeholder="Enter OPT" required="required">
                </div>                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Verify</button>
                </div>
                <div class="bottom-action clearfix text-center">
                    <a href="#" class="float-right"></a>
                </div>
            }
        </div>        
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

