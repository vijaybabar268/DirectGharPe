                </div>
                <div class="col-md-6 col-lg-6 col-sm-6 col-xs-6 text-center">
                    <ul class="main-nav">
                        <li>
                            @Html.ActionLink("Electronics", "Category", "Product", new { id="1", name= "Electronics" }, null)                            
                        </li>
                        <li>
                            @Html.ActionLink("Cloathing", "Category", "Product", new { id = "2", name = "Cloathing" }, null)                            
